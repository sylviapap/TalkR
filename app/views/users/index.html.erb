<div class="page">

    <span><%= flash[:no_access] %></span>

    <div class="container">
        <div class="row">

        <% @users.each do |user| %>
            <% if current_user != user %>
                <div class="col" id="user-card">
                <h4><%= user.name %></h4>
                <p>Country: <%= user.country %></p>
                <p>Language: <%= user.language.name %></p>
                <%= link_to "View Profile", user, :class => 'btn btn-info', :id => "btn-margin" %>
                <%= form_tag(add_contact_path(user)) do %>
                <%= submit_tag "Add Contact", :class => 'btn btn-outline-info', :id => "btn-margin" %>
                <% end %>
                </div>
            <% end %>
        <% end %>

        </div>
    </div>
</div>