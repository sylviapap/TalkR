

<div class="blue-bkg">
  <% if flash[:no_user] %>
      <span style="color: white"><%= flash[:no_user] %></span>
  <% end %>

  <h1 class="form-title">Sign Up</h1>

  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |e| %>
      <span style="color: white"><%= e %></span>
    <% end %>
  <% end %>
  <div class="user-form">
    <%= render 'form' %> 
  </div>
  <div class="text-center" id="login">
    <p>Already have an account? <strong><%= link_to 'Log In', login_path %></p>
  </div>

</div>